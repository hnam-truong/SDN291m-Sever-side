<div style="min-height: 80vh" class="container">
  <div class="">
    <div class="">
      <h1 style="padding-top: 2rem" class="mb-0">Manage Brands</h1>
      <a class="btn btn-dark mt-4 mb-4" href="/admin/brands/add">
        Add new brand
      </a>
    </div>

    <div class="my-3">
      <% if (typeof message !== 'undefined' && message.length > 0) { %>
      <div
        class="alert <%= success && success.length > 0 ? 'alert-success' : 'alert-danger' %>"
      >
        <%= message %>
      </div>
      <% } %>
    </div>

    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th scope="col">ID</th>
            <th scope="col">BRAND NAME</th>
            <th scope="col">ACTION</th>
          </tr>
        </thead>
        <tbody>
          <% brandData.forEach(brand => { %>
          <tr>
            <td><%= brand._id %></td>
            <td><%= brand.brandName %></td>
            <td class="d-flex align-items-center">
              <a
                style="width: 5rem; margin-right: 1rem"
                href="/admin/brands/edit/<%= brand._id %>"
                class="btn btn-dark"
                >Edit
              </a>
              <form
                class="m-0"
                action="/admin/deleteBrand/<%= brand._id %>"
                method="POST"
                onsubmit="return confirm('Are you sure you want to delete this watch?');"
              >
                <button
                  style="width: 5rem"
                  type="submit"
                  class="btn btn-danger"
                >
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
